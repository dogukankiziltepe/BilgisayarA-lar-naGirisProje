@{
    Layout = "_Layout";
}

@if (!String.IsNullOrEmpty(User.Identity.Name))
{
    <div class="mt-3">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-xl">Yazı oluştur</button>
    </div>
}

<div class="row d-flex justify-content-between mt-3" id="Blogs">
</div>


<div class="modal fade bd-example-modal-xl" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content p-4">
            <div class="modal-body">
                <h3>Yazı Oluştur</h3>
                <div class="row">
                    <h5 class="col-5">Başlık:</h5>
                    <div class="mt-2">
                        <input type="text" class="form-control" id="titleIn" />
                    </div>
                    <h5 class="col-5">Header Fotoğrafı:</h5>
                    <div class="col-8 mt-4">
                        <div class="custom-file">
                            <input onchange="UploadMedia(this)" type="file" class="custom-file-input" id="inputGroupFile01">
                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                        </div>
                        <div style="display:none" id="dosya">Dosya Yüklendi</div>
                    </div>
                    <div class="col-8 mt-4">
                        <h5>İçerik</h5>
                        <div class="form-outline">
                            <textarea class="form-control" id="contentIn" rows="5"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button onclick="AddBlog()" type="button" class="btn btn-primary">Yazıyı gönder</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/blog.js"></script>
